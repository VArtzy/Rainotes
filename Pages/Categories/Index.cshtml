@page
@model app2.Pages.Categories.IndexModel

@{
    ViewData["title"] = "Category List";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <div class="text-primary">Category List</div>
        </div>

        <div class="col-6 mb-4 text-end">
            <a asp-area="" asp-page="/Categories/Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp;Create New Category</a>
        </div>

        <br /> <br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
                <tbody>
                    @foreach (var obj in Model.Categories)
                    {    
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td>
                        <div class="w-75 btn-group" role="group">
                                    <a asp-area="" asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>
                                    </a>
                            <a asp-area="" asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </thead>
        </table>
    </div>
</div>