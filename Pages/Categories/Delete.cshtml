@page
@model app2.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label class="mb-2" asp-for="Category.Name"></label>
            <input disabled asp-for="Category.Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label class="mb-2" asp-for="Category.DisplayOrder"></label>
            <input disabled asp-for="Category.DisplayOrder" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-area="" asp-page="Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}